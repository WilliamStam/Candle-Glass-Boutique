{{!-- layouts/base.hbs --}}
<!doctype html>
<html class="no-js" lang="">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title> {{#if flavour.title}}
			{{flavour.title}}
		{{else}}
			Base Page Title
		{{/if}}</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="apple-touch-icon" href="apple-touch-icon.png">
        <!-- Place favicon.ico in the root directory -->


        <link rel="stylesheet" href="../_css/style.css">
		{{#if style }}
        <link rel="stylesheet" href="style.css">
		{{/if}}
		{{#> head-block}}
		{{!-- Custom <head> content per page could be added. --}}
		{{/head-block}}
    </head>
    <body>
        <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
		<header>
			{{#> masterhead}}
				{{> includes/masterhead page_folder="../" }}
			{{!-- Hero content goes here. --}}
			{{/masterhead}}
		</header>

		{{#> content}}
		{{!-- Hero content goes here. --}}
		{{/content}}

		<footer>
			{{#> footer}}
			{{!--
			  The `includes/footer` partial is the default content,
			  but can be overridden.
			--}}
				{{> includes/footer page_folder="../" }}
			{{/footer}}
		</footer>
		{{#> scripts-block}}
		{{!-- Custom scripts per page can be added. --}}
		{{/scripts-block}}

		<script src="http://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
		<script src="//cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
        <script src="../_js/script.js"></script>
		{{#if script }}
        <script src="script.js"></script>
		{{/if}}

        <!-- Google Analytics: change UA-XXXXX-X to be your site's ID. -->
        <script>
            (function(b,o,i,l,e,r){b.GoogleAnalyticsObject=l;b[l]||(b[l]=
            function(){(b[l].q=b[l].q||[]).push(arguments)});b[l].l=+new Date;
            e=o.createElement(i);r=o.getElementsByTagName(i)[0];
            e.src='https://www.google-analytics.com/analytics.js';
            r.parentNode.insertBefore(e,r)}(window,document,'script','ga'));
            ga('create','UA-XXXXX-X','auto');ga('send','pageview');
        </script>
    </body>
</html>
